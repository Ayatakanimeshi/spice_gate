<div class="border-2 border-black p-4">
  <h2 class="text-lg md:text-xl mb-2"><%= link_to shop.name, shop_path(shop) %></h2>
  <p class="text-sm md:text-base"><%= t('shops.index.prefecture', prefecture: t("activerecord.attributes.shop.prefectures.#{shop.prefecture}")) %></p>
  <p class="text-sm md:text-base"><%= t('shops.index.business_hour', business_hour: shop.business_hour) %></p>
  <p class="text-sm md:text-base mb-2"><%= t('shops.index.closed', closed: shop.closed_days.join(", ")) %></p>
  <%= image_tag shop.shop_img.url, class: "w-full h-auto" if shop.shop_img.present? %>
</div>

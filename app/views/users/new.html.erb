<div class="flex justify-center items-center mt-48 mx-auto">
  <div class="w-full max-w-sm">
    <div class="text-center mb-4">
      <h1>ユーザー登録</h1>
        <%= form_with(model: @user, local: true) do |form| %>
            <div class="mb-4">
                <%= form.label :name %>
                <%= form.text_field :name, class: "border-2 border-black px-3 py-2 w-full" %>
            </div>
            <div class="mb-4">
                <%= form.label :email %>
                <%= form.email_field :email, class: "border-2 border-black px-3 py-2 w-full" %>
            </div>
            <div class="mb-4">
                <%= form.label :password %>
                <%= form.password_field :password, class: "border-2 border-black px-3 py-2 w-full" %>
            </div>
            <div class="mb-4">
                <%= form.label :password_confirmation %>
                <%= form.password_field :password_confirmation, class: "border-2 border-black px-3 py-2 w-full" %>
            </div>
            <div class="mb-4">
                <%= form.label :age, "年代" %>
                <%= form.select :age, options_for_select(['10代', '20代', '30代', '40代', '50代', '60代以上']), {}, {class: "border-2 border-black px-3 py-2 w-full"} %>
            </div>
            <div class="mb-4">
                <%= form.label :live_prefecture, "都道府県" %>
                <%= form.select :live_prefecture, options_for_select(['北海道', '青森県', '岩手県', '宮城県', '秋田県', '山形県', '福島県', '茨城県', '栃木県', '群馬県', '埼玉県', '千葉県', '東京都', '神奈川県', '新潟県', '富山県', '石川県', '福井県', '山梨県', '長野県', '岐阜県', '静岡県', '愛知県', '三重県', '滋賀県', '京都府', '大阪府', '兵庫県', '奈良県', '和歌山県', '鳥取県', '島根県', '岡山県', '広島県', '山口県', '徳島県', '香川県', '愛媛県', '高知県', '福岡県', '佐賀県', '長崎県', '熊本県', '大分県', '宮崎県', '鹿児島県', '沖縄県']), {}, {class: "border-2 border-black px-3 py-2 w-full"} %>
            </div>
            <div class="mb-4">
                <%= form.label :tolerance, "辛さ耐性の自己評価" %>
                <%= form.select :tolerance, options_for_select(['1 - 全く辛くない', '2 - 少し辛い', '3 - まあまあ辛い', '4 - 結構辛い', '5 - 非常に辛い']), {}, {class: "border-2 border-black px-3 py-2 w-full"} %>
            </div>
            <div class="mb-4">
                <%= form.label :profile_img, "プロフィール画像" %>
                <%= form.file_field :profile_img, class: "border-2 border-black px-3 py-2 w-full", id: "profileImage" %>
            </div>
            <div id="imagePreview"></div>

            <div class="actions mt-4">
                <%= form.submit "登録", class: "btn btn-primary" %>
            </div>
            <div class='text-center'>
                <%= link_to 'ログインページへ', login_path %>
            </div>
        <% end %>
    </div>
  </div>
</div>
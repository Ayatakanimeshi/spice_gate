<%= search_form_for @q, as: :q, url: posts_path, html: { class: 'flex flex-wrap space-x-4', method: :get } do |f| %>
  <%= f.hidden_field :m, value: 'and' %>

  <div class="flex flex-col">
    <%= f.label :shop_prefecture_eq, '都道府県', class: 'mb-2' %>
    <%= f.select :shop_prefecture_eq, Post.shop_prefectures_i18n.invert.map { |key, value| [key, Post.shop_prefectures[value]] }, {}, class: 'border p-2' %>
  </div>

  <div class="flex flex-col">
    <%= f.label :user_tolerance_eq, '辛さ耐性', class: 'mb-2' %>
    <%= f.select :user_tolerance_eq, User.tolerances_i18n.invert.map { |key, value| [key, User.tolerances[value]] }, {}, class: 'border p-2' %>
  </div>

  <div class="flex flex-col">
    <%= f.label :spiciness_eq, 'カレーの辛さレベル', class: 'mb-2' %>
    <%= f.select :spiciness_eq, Post.spicinesses_i18n.invert.map { |key, value| [key, Post.spicinesses[value]] }, {}, class: 'border p-2' %>
  </div>

  <div class="flex items-center space-x-4 mt-7">
    <%= f.submit 'Search', class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
    <%= link_to '現在地からの検索', nearby_shops_path, class: 'bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>

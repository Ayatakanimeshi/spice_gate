<div class="flex justify-center items-center mt-12 md:mt-48 mx-auto">
  <div class="w-11/12 md:w-full max-w-sm mx-auto">
    <div class="border-2 border-yellow-500 p-4 bg-yellow-100 rounded-lg shadow-md mb-6">
      <div class="text-center mb-4">
        <h1 class="text-xl md:text-3xl font-bold">ログイン</h1>
        <%= form_with url: login_path, local: true do |form| %>
          <div class="mb-4">
            <%= form.label :email, t('user_sessions.new.email'), class: "block text-base md:text-lg text-gray-800 font-semibold" %>
            <%= form.email_field :email, class: "border-2 border-yellow-500 px-3 py-2 w-full mt-2 bg-white rounded-lg" %>
          </div>
          <div class="mb-4">
            <%= form.label :password, t('user_sessions.new.password'), class: "block text-base md:text-lg text-gray-800 font-semibold" %>
            <%= form.password_field :password, class: "border-2 border-yellow-500 px-3 py-2 w-full mt-2 bg-white rounded-lg" %>
          </div>
          <div class="actions mt-4">
            <%= form.submit t('user_sessions.new.submit'), class: "bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded-lg transition duration-300 w-full" %>
          </div>
        <% end %>
        <div class='text-center mt-4'>
          <%= link_to t('user_sessions.new.signup_page'), new_user_path, class: "text-sm md:text-base block mt-2 bg-blue-500 hover:bg-blue-600 text-white font-bold py-1 px-3 rounded-lg transition duration-300 inline-block mr-2" %>
          <%= link_to t('user_sessions.new.forgot_password'), '#', class: "text-sm md:text-base block mt-2 bg-red-500 hover:bg-red-600 text-white font-bold py-1 px-3 rounded-lg transition duration-300 inline-block" %>
        </div>
      </div>
    </div>
  </div>
</div>

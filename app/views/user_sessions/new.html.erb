<div class="flex justify-center items-center mt-48 mx-auto">
  <div class="w-full max-w-sm">
    <div class="text-center mb-4">
      <h1>ログイン</h1>
        <%= form_with url: login_path, local: true do |form| %>
            <div class="mb-4">
                <%= form.label :email %>
                <%= form.email_field :email, class: "border-2 border-black px-3 py-2 w-full" %>
            </div>
            <div class="mb-4">
                <%= form.label :password %>
                <%= form.password_field :password, class: "border-2 border-black px-3 py-2 w-full" %>
            </div>
            <div class="actions mt-4">
                <%= form.submit "ログイン", class: "btn btn-primary" %>
            </div>
        <% end %>
        <div class='text-center'>
        <%= link_to '登録ページへ', new_user_path %>
        <a href="#">パスワードをお忘れの方はこちら</a>
      </div>
    </div>
  </div>
</div>